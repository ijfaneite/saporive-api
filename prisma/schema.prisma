generator client {
  provider = "python"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  username       String    @unique
  email          String    @unique
  hashedPassword String
  disabled       Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Asesor {
  idAsesor  String    @id @default(uuid())
  Asesor    String
  clientes  Cliente[]
  pedidos   Pedido[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  createdBy String
  updatedBy String
}

model Producto {
  idProducto String    @id @default(uuid())
  Producto   String
  Precio     Float
  detallesPedido DetallePedido[] // Add this to link Producto to DetallePedido
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  createdBy  String
  updatedBy  String
}

model Cliente {
  idCliente  String    @id @default(uuid())
  Rif        String    @unique
  Cliente    String
  Zona       String
  idAsesor   String
  asesor     Asesor    @relation(fields: [idAsesor], references: [idAsesor])
  pedidos    Pedido[]  // Add this to link Cliente to Pedido
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  createdBy  String
  updatedBy  String
}

model Pedido {
  idPedido    String    @id @default(uuid())
  fechaPedido DateTime
  totalPedido Float
  idAsesor    String
  asesor      Asesor    @relation(fields: [idAsesor], references: [idAsesor])
  Status      String
  idCliente   String    // Added idCliente
  cliente     Cliente   @relation(fields: [idCliente], references: [idCliente]) // Added relation to Cliente
  detalles    DetallePedido[] // Add this to link Pedido to DetallePedido
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdBy   String
  updatedBy   String
}

model DetallePedido {
  id          String    @id @default(uuid())
  idPedido    String
  pedido      Pedido    @relation(fields: [idPedido], references: [idPedido])
  idProducto  String
  producto    Producto  @relation(fields: [idProducto], references: [idProducto])
  Precio      Float
  Cantidad    Int
  Total       Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdBy   String
  updatedBy   String
}